<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mredrock.cyxbs.freshman">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/freshman_app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:name="com.mredrock.cyxbs.common.BaseApp"
            android:usesCleartextTraffic="true">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.DataDisclosureActivity" />
        <activity android:name=".view.activity.CampusGuidelinesActivity" />
        <activity android:name=".view.activity.EntranceRequirementsActivity" />
        <activity android:name=".view.activity.EnrollmentProcessActivity" />
        <activity android:name=".view.activity.OnlineCommunicationActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".view.activity.CampusMapActivity" />
        <activity android:name=".view.activity.MoreActivity" />
        <activity android:name=".view.activity.CopyQQNumberActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert.MyDialog"/>
        <activity android:name=".view.activity.SaveQRActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert.MyDialog"/>
        <activity android:name=".view.activity.ChooseSaveQrActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert.MyChooseDialog"/>
    </application>

</manifest>