<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" tools:ignore="ResourceName">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Design.Tab.TabTextSize" parent="TextAppearance.Design.Tab" tools:ignore="ResourceName">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Design.Tab.ExpressTabTextSize" parent="TextAppearance.Design.Tab" tools:ignore="ResourceName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/freshman_tab_layout_express_tab_text_color</item>
    </style>

    <style name="Theme.AppCompat.DayNight.Dialog.Alert.MyDialog"
        parent="Theme.AppCompat.DayNight.Dialog.Alert" tools:ignore="ResourceName">
        <item name="windowNoTitle">true</item>
    </style>

</resources>
