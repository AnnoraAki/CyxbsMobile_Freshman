<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/freshman_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/freshman_add_memorandum_book_hint"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/freshman_add_memorandum_book_hint_text_color"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/et_add_memorandum_book_input"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:hint="@string/freshman_add_memorandum_book_input_hint"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:maxLength="15"
        android:background="@drawable/freshman_add_memorandum_book_input_bg"/>

</LinearLayout>