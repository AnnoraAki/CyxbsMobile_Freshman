<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/freshman_recycle_item_campus_map_background">
    <TextView
        android:id="@+id/tv_bus_title_two"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/freshman_recycle_item_content_light"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="18dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_bus_arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_bus_title_two"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/freshman_route_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rv_two_child_content"
        android:layout_below="@id/tv_bus_title_two"
        android:layout_alignStart="@id/tv_bus_title_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_bus_recommend_1"
            android:text="@string/freshman_campus_map_route_1"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_bus_content_1_two"
            android:layout_below="@id/tv_bus_recommend_1"
            android:layout_marginEnd="65dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_bus_recommend_2"
            android:layout_below="@id/tv_bus_content_1_two"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/freshman_campus_map_route_2"/>
        <TextView
            android:id="@+id/tv_bus_content_2_two"
            android:layout_below="@id/tv_bus_recommend_2"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="65dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

</RelativeLayout>