<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/freshman_recycle_item_scenery_common_background"
    android:layout_marginTop="15dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"

    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_scenery_recycle_item_common"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_width="156dp"
        android:layout_height="98dp" />
    <TextView
        android:id="@+id/tv_scenery_recycle_item_common"
        android:layout_below="@id/iv_scenery_recycle_item_common"
        android:layout_alignStart="@id/iv_scenery_recycle_item_common"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/freshman_recycle_item_content_light"
        android:layout_height="wrap_content" />

</RelativeLayout>