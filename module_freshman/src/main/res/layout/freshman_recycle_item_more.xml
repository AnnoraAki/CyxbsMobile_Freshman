<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/freshman_recycle_item_more"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_more_title"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/freshman_recycle_item_more_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="14sp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/tv_more_title"
        android:textColor="@color/freshman_recycle_item_more_content"
        android:id="@+id/tv_more_description"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@drawable/freshman_btn_arrow"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>