<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/freshman_recycle_item_college_bg"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_college_name"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:textSize="15sp"
        android:textColor="@color/freshman_recycle_item_college_name_color"
        tools:text="网络空间安全与信息法学院"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/freshman_recycle_item_college_decoration"
        android:layout_gravity="bottom"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/freshman_recycle_item_college_open"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="13dp"/>

</FrameLayout>