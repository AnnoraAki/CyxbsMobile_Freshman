<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/freshman_page_bg">

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/freshman_recycle_item_title_dark" />

        <TextView

            android:id="@+id/tv_school_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_school_name"
            android:layout_alignStart="@id/tv_school_name"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/freshman_recycle_item_content_light" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:text="@string/freshman_campus_map_copy"
            android:textColor="@color/freshman_recycle_item_blue_light" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_school"
        android:layout_alignStart="@id/rl_school"
        android:layout_marginTop="20dp"
        android:text="@string/freshman_campus_map_recommend_route"
        android:textColor="@color/freshman_recycle_item_content_lightm" />

    <ExpandableListView
        android:id="@+id/exlv_campus_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_recommend"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp" />
</RelativeLayout>